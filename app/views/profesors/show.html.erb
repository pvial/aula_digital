          <a href="/colegios/<%= colegio.id %>">
            <%= colegio.nombre %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/colegios/<%= colegio.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/colegios/<%= colegio.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_colegio/<%= colegio.id %>" class="btn btn-danger" rel="nofollow">
