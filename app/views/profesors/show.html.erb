  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Salas
      </li>

      <% @profesor.salas.each do |sala| %>
        <li class="list-group-item">
          <a href="/salas/<%= sala.id %>">
            <%= sala.profesor_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/salas/<%= sala.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/salas/<%= sala.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_sala/<%= sala.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<!-- A Profesor has many colegios -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Colegios
      </li>

      <% @profesor.colegios.each do |colegio| %>
