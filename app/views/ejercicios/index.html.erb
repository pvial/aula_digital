<div class="page-header">
  <h1>
    Ejercicios
    <a href="/ejercicios/new" class="btn btn-lg btn-success">New Ejercicio</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "ejercicios_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :habilidad_cont, "Habilidad contains" %>
    <%= f.text_field :habilidad_cont, :class => "form-control", :placeholder => "Habilidad contains" %>
  </div>

<div class="form-group">
    <%= f.label :pregunta_cont, "Pregunta contains" %>
    <%= f.text_field :pregunta_cont, :class => "form-control", :placeholder => "Pregunta contains" %>
  </div>

<div class="form-group">
  <%= f.label :dificultad, "Dificultad" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :dificultad_gteq, :class => "form-control", :placeholder => "Dificultad greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :dificultad_lteq, :class => "form-control", :placeholder => "Dificultad less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :answer_right_answer_cont, "Answer right_answer contains" %>
      <%= f.text_field :answer_right_answer_cont, :class => "form-control", :placeholder => "Answer right_answer contains" %>
    </div>

<div class="form-group">
      <%= f.label :indicador_descripcion_cont, "Indicator descripcion contains" %>
      <%= f.text_field :indicador_descripcion_cont, :class => "form-control", :placeholder => "Indicator descripcion contains" %>
    </div>

<div class="form-group">
      <%= f.label :contenido_nombre_cont, "Contenido nombre contains" %>
      <%= f.text_field :contenido_nombre_cont, :class => "form-control", :placeholder => "Contenido nombre contains" %>
    </div>

<div class="form-group">
          <%= f.label :created_at, "User Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='usersgteqcreated_atPicker'>
                  <%= f.text_field :users_created_at_gteq, :class => "form-control", :placeholder => "User Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='userslteqcreated_atPicker'>
                  <%= f.text_field :users_created_at_lteq, :class => "form-control", :placeholder => "User Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#usersgteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#userslteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#usersgteqcreated_atPicker').on("dp.change", function (e) {
                  $('#userslteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#userslteqcreated_atPicker').on("dp.change", function (e) {
                  $('#usersgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/ejercicios" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#ejercicios_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Contenido</th>
        <th>Dificultad</th>
        <th>Imagen</th>
        <th>Pregunta</th>
        <th>Indicador</th>
        <th>Habilidad</th>
        <th>Actions</th>
      </tr>

      <% @ejercicios.each do |ejercicio| %>
      <tr>
        <td>
          <% if ejercicio.contenido.present? %>
            <a href="/contenidos/<%= ejercicio.contenido.id %>">
              <%= ejercicio.contenido.nombre %>
            </a>
          <% end %>
        </td>
        <td><%= ejercicio.dificultad %></td>
        <td><img src='<%= ejercicio.imagen %>' class='img-responsive'></td>
        <td><%= ejercicio.pregunta %></td>
        <td>
          <% if ejercicio.indicador.present? %>
            <a href="/indicators/<%= ejercicio.indicador.id %>">
              <%= ejercicio.indicador.descripcion %>
            </a>
          <% end %>
        </td>
        <td><%= ejercicio.habilidad %></td>
        <td>
          <a href="/ejercicios/<%= ejercicio.id %>" class="btn btn-primary">Show</a>
          <a href="/ejercicios/<%= ejercicio.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_ejercicio/<%= ejercicio.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @ejercicios, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
