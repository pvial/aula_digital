<!-- Validation failure messages -->
<% if @asignacion.errors.any? %>
  <% @asignacion.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Asignacion #<%= @asignacion.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_asignacion/<%= @asignacion.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for test_id -->
      <div class="form-group">
        <label for="test_id" class="control-label">
          Test
        </label>

        <%= select_tag(:test_id, options_from_collection_for_select(Test.all, :id, :profesor_id, @asignacion.test_id), :class => "form-control") %>
      </div>

      <!-- Label and input for sala_id -->
      <div class="form-group">
        <label for="sala_id" class="control-label">
          Sala
        </label>

        <%= select_tag(:sala_id, options_from_collection_for_select(Sala.all, :id, :profesor_id, @asignacion.sala_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Asignacion
      </button>
      or
      <a href="/asignacions/<%= @asignacion.id %>">Cancel</a>
    </form>
  </div>
</div>
