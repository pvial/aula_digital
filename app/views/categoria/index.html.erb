<div class="page-header">
  <h1>
    Categoria
    <a href="/categoria/new" class="btn btn-lg btn-success">New Categorium</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "categoria_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :descripcion_cont, "Descripcion contains" %>
    <%= f.text_field :descripcion_cont, :class => "form-control", :placeholder => "Descripcion contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :eje_description_cont, "Eje description contains" %>
      <%= f.text_field :eje_description_cont, :class => "form-control", :placeholder => "Eje description contains" %>
    </div>

<div class="form-group">
      <%= f.label :contenidos_nombre_cont, "Contenido nombre contains" %>
      <%= f.text_field :contenidos_nombre_cont, :class => "form-control", :placeholder => "Contenido nombre contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/categoria" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#categoria_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Descripcion</th>
        <th>Eje</th>
        <th>Actions</th>
      </tr>

      <% @categoria.each do |categorium| %>
      <tr>
        <td><%= categorium.descripcion %></td>
        <td>
          <% if categorium.eje.present? %>
            <a href="/ejes/<%= categorium.eje.id %>">
              <%= categorium.eje.description %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/categoria/<%= categorium.id %>" class="btn btn-primary">Show</a>
          <a href="/categoria/<%= categorium.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_categorium/<%= categorium.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @categoria, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
