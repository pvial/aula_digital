        <input type="text" id="numero_ejercicios" name="numero_ejercicios" placeholder="Numero ejercicios" class="form-control" value="">
      </div>

      <button class="btn btn-block btn-success">
        Create Seccion
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>
