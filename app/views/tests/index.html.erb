<div class="page-header">
  <h1>
    Tests
    <a href="/tests/new" class="btn btn-lg btn-success">New Test</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "tests_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :profesor_email_cont, "Profesor email contains" %>
      <%= f.text_field :profesor_email_cont, :class => "form-control", :placeholder => "Profesor email contains" %>
    </div>

<div class="form-group">
          <%= f.label :created_at, "Seccion Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='seccionsgteqcreated_atPicker'>
                  <%= f.text_field :seccions_created_at_gteq, :class => "form-control", :placeholder => "Seccion Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='seccionslteqcreated_atPicker'>
                  <%= f.text_field :seccions_created_at_lteq, :class => "form-control", :placeholder => "Seccion Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#seccionsgteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#seccionslteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#seccionsgteqcreated_atPicker').on("dp.change", function (e) {
                  $('#seccionslteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#seccionslteqcreated_atPicker').on("dp.change", function (e) {
                  $('#seccionsgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/tests" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#tests_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Profesor</th>
        <th>Actions</th>
      </tr>

      <% @tests.each do |test| %>
      <tr>
        <td>
          <% if test.profesor.present? %>
            <a href="/profesors/<%= test.profesor.id %>">
              <%= test.profesor.email %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/tests/<%= test.id %>" class="btn btn-primary">Show</a>
          <a href="/tests/<%= test.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_test/<%= test.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @tests, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
