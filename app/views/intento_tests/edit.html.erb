<!-- Validation failure messages -->
<% if @intento_test.errors.any? %>
  <% @intento_test.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Intento Test #<%= @intento_test.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_intento_test/<%= @intento_test.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for test_id -->
      <div class="form-group">
        <label for="test_id" class="control-label">
          Test
        </label>

        <%= select_tag(:test_id, options_from_collection_for_select(Test.all, :id, :profesor_id, @intento_test.test_id), :class => "form-control") %>
      </div>

      
      

      <button class="btn btn-warning">
        Update Intento Test
      </button>
      or
      <a href="/intento_tests/<%= @intento_test.id %>">Cancel</a>
    </form>
  </div>
</div>
