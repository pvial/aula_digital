<!-- Validation failure messages -->
<% if @intento_test.errors.any? %>
  <% @intento_test.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Intento Test</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_intento_test" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for test_id -->
      <div class="form-group">
        <label for="test_id" class="control-label">
          Test
        </label>

        <%= select_tag(:test_id, options_from_collection_for_select(Test.all, :id, :profesor_id, @intento_test.test_id), :class => "form-control") %>
      </div>

      <!-- Label and input for user_id -->
      <input type="hidden" name="user_id" value="<%= current_user.id %>">

      <button class="btn btn-success">
        Create Intento Test
      </button>
      or
      <a href="/intento_tests">Cancel</a>
    </form>
  </div>
</div>
