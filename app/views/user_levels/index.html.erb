<div class="page-header">
  <h1>
    User levels
    <a href="/user_levels/new" class="btn btn-lg btn-success">New User level</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "user_levels_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
          <%= f.label :date, "Date" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='dategteqPicker'>
                  <%= f.text_field :date_gteq, :class => "form-control", :placeholder => "Date greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='datelteqPicker'>
                  <%= f.text_field :date_lteq, :class => "form-control", :placeholder => "Date less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#dategteqPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#datelteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#dategteqPicker').on("dp.change", function (e) {
                  $('#datelteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#datelteqPicker').on("dp.change", function (e) {
                  $('#dategteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
  <%= f.label :eje_2_placeholder, "Eje 2 placeholder" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :eje_2_placeholder_gteq, :class => "form-control", :placeholder => "Eje 2 placeholder greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :eje_2_placeholder_lteq, :class => "form-control", :placeholder => "Eje 2 placeholder less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :eje_1_placeholder, "Eje 1 placeholder" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :eje_1_placeholder_gteq, :class => "form-control", :placeholder => "Eje 1 placeholder greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :eje_1_placeholder_lteq, :class => "form-control", :placeholder => "Eje 1 placeholder less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :general, "General" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :general_gteq, :class => "form-control", :placeholder => "General greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :general_lteq, :class => "form-control", :placeholder => "General less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :user_email_cont, "User email contains" %>
      <%= f.text_field :user_email_cont, :class => "form-control", :placeholder => "User email contains" %>
    </div>

<div class="form-group">
      <%= f.label :materia_description_cont, "Materium description contains" %>
      <%= f.text_field :materia_description_cont, :class => "form-control", :placeholder => "Materium description contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/user_levels" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#user_levels_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>General</th>
        <th>Eje 1 placeholder</th>
        <th>Eje 2 placeholder</th>
        <th>Materia</th>
        <th>Date</th>
        <th>Actions</th>
      </tr>

      <% @user_levels.each do |user_level| %>
      <tr>
        <td>
          <% if user_level.user.present? %>
            <a href="/users/<%= user_level.user.id %>">
              <%= user_level.user.email %>
            </a>
          <% end %>
        </td>
        <td><%= user_level.general %></td>
        <td><%= user_level.eje_1_placeholder %></td>
        <td><%= user_level.eje_2_placeholder %></td>
        <td>
          <% if user_level.materia.present? %>
            <a href="/materia/<%= user_level.materia.id %>">
              <%= user_level.materia.description %>
            </a>
          <% end %>
        </td>
        <td><%= user_level.date %></td>
        <td>
          <a href="/user_levels/<%= user_level.id %>" class="btn btn-primary">Show</a>
          <a href="/user_levels/<%= user_level.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_user_level/<%= user_level.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @user_levels, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
