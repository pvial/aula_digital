<div class="page-header">
  <h1>
    Objetivos
    <a href="/objetivos/new" class="btn btn-lg btn-success">New Objetivo</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "objetivos_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :descripcion_cont, "Descripcion contains" %>
    <%= f.text_field :descripcion_cont, :class => "form-control", :placeholder => "Descripcion contains" %>
  </div>

<div class="form-group">
  <%= f.label :numeral, "Numeral" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :numeral_gteq, :class => "form-control", :placeholder => "Numeral greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :numeral_lteq, :class => "form-control", :placeholder => "Numeral less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :indicators_descripcion_cont, "Indicator descripcion contains" %>
      <%= f.text_field :indicators_descripcion_cont, :class => "form-control", :placeholder => "Indicator descripcion contains" %>
    </div>

<div class="form-group">
      <%= f.label :eje_description_cont, "Eje description contains" %>
      <%= f.text_field :eje_description_cont, :class => "form-control", :placeholder => "Eje description contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/objetivos" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#objetivos_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Eje</th>
        <th>Descripcion</th>
        <th>Numeral</th>
        <th>Actions</th>
      </tr>

      <% @objetivos.each do |objetivo| %>
      <tr>
        <td>
          <% if objetivo.eje.present? %>
            <a href="/ejes/<%= objetivo.eje.id %>">
              <%= objetivo.eje.description %>
            </a>
          <% end %>
        </td>
        <td><%= objetivo.descripcion %></td>
        <td><%= objetivo.numeral %></td>
        <td>
          <a href="/objetivos/<%= objetivo.id %>" class="btn btn-primary">Show</a>
          <a href="/objetivos/<%= objetivo.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_objetivo/<%= objetivo.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @objetivos, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
