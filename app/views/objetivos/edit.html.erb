<!-- Validation failure messages -->
<% if @objetivo.errors.any? %>
  <% @objetivo.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Objetivo #<%= @objetivo.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_objetivo/<%= @objetivo.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for eje_id -->
      <div class="form-group">
        <label for="eje_id" class="control-label">
          Eje
        </label>

        <%= select_tag(:eje_id, options_from_collection_for_select(Eje.all, :id, :description, @objetivo.eje_id), :class => "form-control") %>
      </div>

      <!-- Label and input for descripcion -->
      <div class="form-group">
        <label for="descripcion" class="control-label">
          Descripcion
        </label>

        <textarea id="descripcion" name="descripcion" placeholder="Descripcion" class="form-control" rows="3"><%= @objetivo.descripcion %></textarea>
      </div>

      <!-- Label and input for numeral -->
      <div class="form-group">
        <label for="numeral" class="control-label">
          Numeral
        </label>

        <input type="text" id="numeral" name="numeral" placeholder="Numeral" class="form-control" value="<%= @objetivo.numeral %>">
      </div>

      <button class="btn btn-warning">
        Update Objetivo
      </button>
      or
      <a href="/objetivos/<%= @objetivo.id %>">Cancel</a>
    </form>
  </div>
</div>
