<div class="page-header">
  <h1>
    Tributos
    <a href="/tributos/new" class="btn btn-lg btn-success">New Tributo</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "tributos_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :contenido_name_cont, "Contenido name contains" %>
    <%= f.text_field :contenido_name_cont, :class => "form-control", :placeholder => "Contenido name contains" %>
  </div>

<div class="form-group">
    <%= f.label :indicador_name_cont, "Indicador name contains" %>
    <%= f.text_field :indicador_name_cont, :class => "form-control", :placeholder => "Indicador name contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :indicador_descripcion_cont, "Indicator descripcion contains" %>
      <%= f.text_field :indicador_descripcion_cont, :class => "form-control", :placeholder => "Indicator descripcion contains" %>
    </div>

<div class="form-group">
      <%= f.label :contenido_nombre_cont, "Contenido nombre contains" %>
      <%= f.text_field :contenido_nombre_cont, :class => "form-control", :placeholder => "Contenido nombre contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/tributos" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#tributos_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Contenido name</th>
        <th>Contenido</th>
        <th>Indicador name</th>
        <th>Indicador</th>
        <th>Actions</th>
      </tr>

      <% @tributos.each do |tributo| %>
      <tr>
        <td><%= tributo.contenido_name %></td>
        <td>
          <% if tributo.contenido.present? %>
            <a href="/contenidos/<%= tributo.contenido.id %>">
              <%= tributo.contenido.nombre %>
            </a>
          <% end %>
        </td>
        <td><%= tributo.indicador_name %></td>
        <td>
          <% if tributo.indicador.present? %>
            <a href="/indicators/<%= tributo.indicador.id %>">
              <%= tributo.indicador.descripcion %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/tributos/<%= tributo.id %>" class="btn btn-primary">Show</a>
          <a href="/tributos/<%= tributo.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_tributo/<%= tributo.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @tributos, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
