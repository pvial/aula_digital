<div class="page-header">
  <h3>Indicator #<%= @indicator.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Objetivo</dt>
      <dd>
        <% if @indicator.objetivo.present? %>
          <a href="/objetivos/<%= @indicator.objetivo_id %>">
            <%= @indicator.objetivo.descripcion %>
          </a>
        <% end %>
      </dd>

      <dt>Descripcion</dt>
      <dd><%= @indicator.descripcion %></dd>

      <dt>Numeral</dt>
      <dd><%= @indicator.numeral %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/indicators" class="btn btn-primary">
        Back
      </a>
      <a href="/indicators/<%= @indicator.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_indicator/<%= @indicator.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Indicator has many tributarios -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Tributarios
      </li>

      <% @indicator.tributarios.each do |tributo| %>
        <li class="list-group-item">
          <a href="/tributos/<%= tributo.id %>">
            <%= tributo.contenido_name %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/tributos/<%= tributo.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/tributos/<%= tributo.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_tributo/<%= tributo.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_tributo" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for contenido_name -->
      <div class="form-group">
        <label for="contenido_name" class="control-label">
          Contenido name
        </label>

        <textarea id="contenido_name" name="contenido_name" placeholder="Contenido name" class="form-control" rows="3"></textarea>
      </div>

      <!-- Label and input for contenido_id -->
      <div class="form-group">
        <label for="contenido_id" class="control-label">
          Contenido
        </label>

        <%= select_tag(:contenido_id, options_from_collection_for_select(Contenido.all, :id, :nombre), :class => "form-control") %>
      </div>

      <!-- Label and input for indicador_name -->
      <div class="form-group">
        <label for="indicador_name" class="control-label">
          Indicador name
        </label>

        <textarea id="indicador_name" name="indicador_name" placeholder="Indicador name" class="form-control" rows="3"></textarea>
      </div>

      <!-- Label and input for indicador_id -->
      <div class="form-group">
        <label for="indicador_id" class="control-label">
          Indicador
        </label>

        <%= select_tag(:indicador_id, options_from_collection_for_select(Indicator.all, :id, :descripcion), :class => "form-control") %>
      </div>

      <button class="btn btn-block btn-success">
        Create Tributo
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>

<!-- A Indicator has many ejercicios -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Ejercicios
      </li>

      <% @indicator.ejercicios.each do |ejercicio| %>
        <li class="list-group-item">
          <a href="/ejercicios/<%= ejercicio.id %>">
            <%= ejercicio.created_at %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/ejercicios/<%= ejercicio.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/ejercicios/<%= ejercicio.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_ejercicio/<%= ejercicio.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_ejercicio" method="post" enctype="multipart/form-data">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for contenido_id -->
      <div class="form-group">
        <label for="contenido_id" class="control-label">
          Contenido
        </label>

        <%= select_tag(:contenido_id, options_from_collection_for_select(Contenido.all, :id, :nombre), :class => "form-control") %>
      </div>

      <!-- Label and input for dificultad -->
      <div class="form-group">
        <label for="dificultad" class="control-label">
          Dificultad
        </label>

        <input type="text" id="dificultad" name="dificultad" placeholder="Dificultad" class="form-control" value="">
      </div>

      <!-- Label and input for imagen -->
      <div class="form-group">
        <label for="imagen" class="control-label">
          Imagen
        </label>

        <input type="file" id="imagen" name="imagen" class="form-control">
      </div>

      <!-- Label and input for pregunta -->
      <div class="form-group">
        <label for="pregunta" class="control-label">
          Pregunta
        </label>

        <textarea id="pregunta" name="pregunta" placeholder="Pregunta" class="form-control" rows="3"></textarea>
      </div>

      <!-- Label and input for indicador_id -->
      <div class="form-group">
        <label for="indicador_id" class="control-label">
          Indicador
        </label>

        <%= select_tag(:indicador_id, options_from_collection_for_select(Indicator.all, :id, :descripcion), :class => "form-control") %>
      </div>

      <!-- Label and input for habilidad -->
      <div class="form-group">
        <label for="habilidad" class="control-label">
          Habilidad
        </label>

        <input type="text" id="habilidad" name="habilidad" placeholder="Habilidad" class="form-control" value="">
      </div>

      <button class="btn btn-block btn-success">
        Create Ejercicio
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>

