<div class="page-header">
  <h1>
    Indicators
    <a href="/indicators/new" class="btn btn-lg btn-success">New Indicator</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "indicators_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :descripcion_cont, "Descripcion contains" %>
    <%= f.text_field :descripcion_cont, :class => "form-control", :placeholder => "Descripcion contains" %>
  </div>

<div class="form-group">
  <%= f.label :numeral, "Numeral" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :numeral_gteq, :class => "form-control", :placeholder => "Numeral greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :numeral_lteq, :class => "form-control", :placeholder => "Numeral less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :tributarios_contenido_name_cont, "Tributo contenido_name contains" %>
      <%= f.text_field :tributarios_contenido_name_cont, :class => "form-control", :placeholder => "Tributo contenido_name contains" %>
    </div>

<div class="form-group">
          <%= f.label :created_at, "Ejercicio Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='ejerciciosgteqcreated_atPicker'>
                  <%= f.text_field :ejercicios_created_at_gteq, :class => "form-control", :placeholder => "Ejercicio Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='ejercicioslteqcreated_atPicker'>
                  <%= f.text_field :ejercicios_created_at_lteq, :class => "form-control", :placeholder => "Ejercicio Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#ejerciciosgteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#ejercicioslteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#ejerciciosgteqcreated_atPicker').on("dp.change", function (e) {
                  $('#ejercicioslteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#ejercicioslteqcreated_atPicker').on("dp.change", function (e) {
                  $('#ejerciciosgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
      <%= f.label :objetivo_descripcion_cont, "Objetivo descripcion contains" %>
      <%= f.text_field :objetivo_descripcion_cont, :class => "form-control", :placeholder => "Objetivo descripcion contains" %>
    </div>

<div class="form-group">
      <%= f.label :contenidos_nombre_cont, "Contenido nombre contains" %>
      <%= f.text_field :contenidos_nombre_cont, :class => "form-control", :placeholder => "Contenido nombre contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/indicators" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#indicators_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Objetivo</th>
        <th>Descripcion</th>
        <th>Numeral</th>
        <th>Actions</th>
      </tr>

      <% @indicators.each do |indicator| %>
      <tr>
        <td>
          <% if indicator.objetivo.present? %>
            <a href="/objetivos/<%= indicator.objetivo.id %>">
              <%= indicator.objetivo.descripcion %>
            </a>
          <% end %>
        </td>
        <td><%= indicator.descripcion %></td>
        <td><%= indicator.numeral %></td>
        <td>
          <a href="/indicators/<%= indicator.id %>" class="btn btn-primary">Show</a>
          <a href="/indicators/<%= indicator.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_indicator/<%= indicator.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @indicators, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
